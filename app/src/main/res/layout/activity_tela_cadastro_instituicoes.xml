        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_numero_instituicao"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/borda_cinza"
                android:fontFamily="@font/roboto"
                android:hint="Número"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_complemento_instituicao" />


            <EditText
                android:id="@+id/et_complemento_instituicao"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borda_cinza"
                android:fontFamily="@font/roboto"
                android:hint="Complemento"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/botao_cadastro_instituicao"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/borda_marrom"
            android:inputType="textPersonName"
            android:text="Cadastrar"
            android:textColor="@color/white"
            android:textSize="20sp">

        </Button>

    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_cadastro_instituicoes"
    android:fillViewport="true"
    tools:context=".tela_cadastro_instituicoes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <EditText
            android:id="@+id/et_nome_instituicao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/spinner_tipo_estabeleciamento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/borda_cinza"
            android:entries="@array/tipos_estabelecimento"
            android:padding="16dp" />

        <EditText
            android:id="@+id/et_cnpj"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="CNPJ"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_email_instituicao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_senha_instituicao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_telefone_instituicao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="Telefone"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_celular_instituicao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="Celular"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_cep_instituicao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="CEP"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_endereco_instituicao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borda_cinza"
            android:fontFamily="@font/roboto"
            android:hint="Rua/Avenida"
            android:inputType="number" />


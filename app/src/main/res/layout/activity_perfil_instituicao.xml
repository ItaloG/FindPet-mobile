<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfilInstituicaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="top"
        android:orientation="vertical"
        tools:context=".ui.perfil_insti_visaoInstituicao">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/marromClaro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="-48dp"
            android:elevation="10dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="100dp"
                android:orientation="vertical"
                android:padding="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagem_ong"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_baseline_pets_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/titulo_ong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Nome da Ong"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imagem_ong"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_avaliacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawableStart="@drawable/ic_baseline_star_24"
                        android:gravity="center"
                        android:text="3.0"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/titulo_ong"
                        app:layout_constraintTop_toBottomOf="@+id/titulo_ong" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_contatos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nossa história"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nome_email_instituicao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="exampleong@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/nome_rua_instituicao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="Rua dos Limões, 78"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/telefone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_phone_in_talk_24"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="(11) 4002-8922"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/telefone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="(11) 98464-5989"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Nossa história"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="left"
                    android:scaleType="centerCrop"
                    android:text="Lorem ipsum dolor sit amet. Aut amet
                    minus ut quam minus quo consequatur possimus! Sed quia consectetur et odio adipisci aut pariatur earum ut cumque"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/quantidade_animais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-70dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Animais disponíveis na instituição: 87"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginTop="-80dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_img"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="90dp"
                        android:drawableStart="@drawable/cachorro"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Adicionar imagens ou videos"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_caracteristicas"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Nome e idade"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_pro"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-120dp"
                    android:drawableStart="@drawable/cachorro"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_marginBottom="90dp"
                        android:drawableStart="@drawable/cachorro"
                        android:gravity="center"
                        android:scaleType="centerCrop"

                        android:text="Adicionar imagens ou videos"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_caracteristicas2"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Nome e idade"
                        android:textColor="@color/black"
                        android:textSize="13sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_prof"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="-120dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_marginBottom="90dp"
                        android:drawableStart="@drawable/cachorro"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Adicionar imagens ou videos"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/txt_caracteristicas3"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Nome e idade"
                        android:textColor="@color/black"
                        android:textSize="13sp"></TextView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/campanhas_instituicao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Campanhas"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_add_campanhas"
                    android:layout_width="300dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="-80dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_img_campanhas"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="90dp"
                        android:background="@color/cinza"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="sliderShow"
                        android:textSize="13sp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/funcionarios"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Nosso funcionários:"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_proFun"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="-88dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_imgFun"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_marginBottom="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Adicionar imagem"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_caracteristicasFun"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Nome"
                        android:textColor="@color/black"
                        android:textSize="13sp"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_proFun2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-110dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_imgFun2"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_marginBottom="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Adicionar imagenm"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/txt_caracteristicasFun2"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Nome"
                        android:textColor="@color/black"
                        android:textSize="13sp"></TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_proFun3"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="-110dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_imgFun3"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_marginBottom="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Adicionar imagem"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_caracteristicasFun3"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="Nome"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.campanhasActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="10dp"
                android:background="@color/cinza"
                android:padding="50dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="220dp"
                    android:background="@drawable/button_marrom"
                    android:drawableStart="@drawable/ic_baseline_add_24"
                    android:drawablePadding="-20dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:text="banner"
                    android:textColor="@color/white"></Button>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/data_termino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"

                        android:layout_marginStart="190dp"
                        android:layout_marginTop="550dp"
                        android:fontFamily="@font/montserrat"
                        android:padding="10dp"
                        android:text="Data de Término"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:drawablePadding="16dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Título da Campanha"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="365dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Descrição"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="405dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="470dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Local"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="490dp">


                <EditText
                    android:id="@+id/et_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:inputType="none"
                    android:padding="10dp"
                    android:textSize="17dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/texto_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="590dp"
                android:text="Set 20, 2021"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/texto_data_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="90dp"
                android:layout_marginTop="590dp"
                android:layout_toRightOf="@+id/texto_data"
                android:text="Set 29, 2021"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/data_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:layout_marginStart="10dp"
                android:layout_marginTop="550dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Data de Início"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
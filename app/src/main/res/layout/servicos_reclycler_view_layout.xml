<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        app:cardCornerRadius="16dp">

        <TextView
            android:id="@+id/servico_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_servico"
            android:drawableEnd="@drawable/close_24"
            android:drawableTint="@color/marromEscuro"
            android:gravity="center"
            android:padding="8dp"
            android:text="Servico"
            android:textColor="@color/marromEscuro" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
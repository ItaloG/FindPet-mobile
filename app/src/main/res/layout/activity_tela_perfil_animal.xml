<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".telaPerfilAnimalActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/toolbar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-48dp"
        android:elevation="10dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageView
                android:id="@+id/imagem_ong"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_pets_24" />

            <TextView
                android:id="@+id/titulo_ong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Nome do animal"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/txt_avaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-90dp"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:text="Adicionar avaliações"
                android:textColor="@color/cinza"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-90dp"
                android:drawableStart="@drawable/ic_baseline_home_24"
                android:drawablePadding="3dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Instituto Luisa Mell"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="90dp"
                android:gravity="left"
                android:scaleType="centerCrop"
                android:text="Lorem ipsum dolor sit amet. Aut amet
                 minus ut quam minus quo consequatur possimus! Sed quia consectetur et odio adipisci aut pariatur earum ut cumque"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <Button
                android:id="@+id/add_img"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-60dp"
                android:layout_toLeftOf="@+id/add_img2"
                android:background="@drawable/borda_laranja_claro"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Adotar"
                android:textSize="13sp">

            </Button>


            <Button
                android:id="@+id/add_img2"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@+id/add_img"
                android:background="@drawable/borda_laranja_claro"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Ver ONG"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/campanhas_instituicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Galeria"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_add_campanhas"
                android:layout_width="300dp"
                android:layout_height="85dp"
                android:layout_marginTop="-80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_img_campanhas"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Adicionar imagem"
                    android:textColor="@color/cinza"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/funcionarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Nosso funcionários:"
                android:textColor="@color/black"
                android:textSize="13sp"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_proFun"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="-89dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_imgFun"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Adicionar imagem"
                    android:textSize="13sp"></TextView>

                <TextView
                    android:id="@+id/txt_caracteristicasFun"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Nome"
                    android:textColor="@color/black"
                    android:textSize="13sp"></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_proFun2"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="-110dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_imgFun2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Adicionar imagenm"
                    android:textSize="13sp"></TextView>

                <TextView
                    android:id="@+id/txt_caracteristicasFun2"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Nome"
                    android:textColor="@color/black"
                    android:textSize="13sp"></TextView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_proFun3"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="end"
                android:layout_marginTop="-110dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_imgFun3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginBottom="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Adicionar imagem"
                    android:textSize="13sp"></TextView>

                <TextView
                    android:id="@+id/txt_caracteristicasFun3"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="Nome"
                    android:textColor="@color/black"
                    android:textSize="13sp"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>